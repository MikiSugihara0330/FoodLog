<div class="main posts-index">
  <div class="NewPost">
    New Posts
  </div>

  <div class="container2">
    <% @posts.each do |post| %>
    <div class ="item">
      <img src = "<%="/food_images/#{post.image_name}"%>">
      <div class="posts-index-item">
        <a><%= link_to(post.content, "/posts/#{post.id}") %></a>
      </div>
    </div>
    <% end %>
  </div>
</div>
