<div class="main posts-index">
  <div class="NewPost">
    New Posts
  </div>

  <div class="container2">
    <% @posts.each do |post| %>
      <!-- <div class="post-left">
           <img src="<%= "/user_images/#{post.user.image_name}" %>">
           </div> -->
    <div class ="item">
      <figure>
        <img src = "<%="/food_images/#{post.image_name}"%>">
        <figcaption>
          <div class="posts-index-item">
            <img src ="<%= "/user_images/#{post.user.image_name}" %>">
            <div class="post-user-name">
                <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
            <a><%= link_to(post.content, "/posts/#{post.id}") %></a>
          </div>
        </figcaption>
      </figure>
    </div>
    <% end %>
  </div>
</div>
